  body
    .limiter(style="background-image: url('imagens/grey.jpg'); background-repeat: no-repeat;\
    background-attachment: fixed;")
      .w3-top
        .w3-bar.w3-white.w3-padding.w3-card(style='letter-spacing:4px;')
          a.w3-bar-item.w3-button(href='#home') Digital Me
          // Right-sided navbar links. Hide them on small screens
          .w3-right.w3-hide-small
            a.w3-bar-item.w3-button(href='#login') LogIn
            a.w3-bar-item.w3-button(href='#registo') Registe-se
      #login.container-login100(style="margin-top: 20px")
        .wrap-login100.p-l-55.p-r-55.p-t-65.p-b-54
          span.login100-form-title.p-b-49
            | LogIn
          form.login100-form.validate-form(action="/login" method="POST")
            .wrap-input100.validate-input.m-b-23(data-validate='Email is required')
              span.label-input100 Email
              input#email.input100(type='email', name='email', placeholder='Intoduza o seu email', required='')
              span.focus-input100()
            .wrap-input100.validate-input(data-validate='Password is required')
              span.label-input100 Password
              input#passwordlog.input100(type='password', name='password', placeholder='Introduza a sua password', required='')
              span.focus-input100
            .container-login100-form-btn(style='margin-top: 10px')
              .wrap-login100-form-btn
                .login100-form-bgbtn
                button#btnLogin.login100-form-btn(type='submit')
                  | Login
          .txt1.text-center.p-t-54.p-b-20
            span
              | Ou Sign Up com:
          .flex-c-m
            a.login100-social-item.bg1(href='#')
              i.fa.fa-facebook
            a.login100-social-item.bg2(href='#')
              i.fa.fa-twitter
            a.login100-social-item.bg3(href='#')
              i.fa.fa-google
      // REGISTO
      #registo.container-login100
        .wrap-login100.p-l-55.p-r-55.p-t-65.p-b-54
          span.login100-form-title.p-b-49
            | Registe-se
          form#regform.login100-form.validate-form(action="/signup" method="POST")
            .wrap-input100.validate-input.m-b-23(data-validate='Name is required')
              span.label-input100 Nome
              input.input100(type='text', name='name', placeholder='Nome', required)
              span.focus-input100
            .wrap-input100.validate-input(data-validate='Email is required')
              span.label-input100 Email
              input.input100(type='email', name='email', placeholder='Email', required)
              span.focus-input100
            .wrap-input100.validate-input(data-validate='Password is required', style='margin-top:20px')
              span.label-input100 Password
              input#passwordreg1.input100(type='password', name='password', placeholder='Password', required)
              span.focus-input100
            .wrap-input100.validate-input(data-validate='Password is required', style='margin-top:20px')
              span.label-input100 Confirme Password
              input#passwordreg2.input100(type='password', name='password2', placeholder='Confirme Password', required='')
              span.focus-input100
              p#validate-status(style="color: red")
            .wrap-input100.validate-input(data-validate='Bday is not required', style='margin-top:20px')
              span.label-input100 Data de Nascimento
              input#birth_date.input100(type='date', name='birth_date')
              span.focus-input100
            .wrap-input100.validate-input(data-validate='Gender is required', style='margin-top:20px')
              span.label-input100 GÃ©nero
              select.form-control(name="gender")
                option(value='Male') Masculino
                option(value='Female') Feminino
                option(value='Other') Outro
            .container-login100-form-btn(style='margin-top: 10px')
                .wrap-login100-form-btn
                  .login100-form-bgbtn
                  button#submit.login100-form-btn(type='submit')
                    | Registar
            span.clearfix

